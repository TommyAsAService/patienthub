= stylesheet_link_tag    'patients', media: 'all', 'data-turbolinks-track' => true
.nested-fields
  .nested-header
    %span Medication
    = link_to_remove_association f, class: 'btn btn-default btn' do
      .glyphicon.glyphicon-remove
  .form-group
    = f.input :label, input_html: { class: "form-control"}
  .form-group
    = f.input :start_time, as: :date, input_html: { class: "form-control"}
  .form-group
    = f.input :medication_name, :url => autocomplete_medication_name_patients_path, :as => :autocomplete, input_html: { class: "form-control"}
  .form-group
    = f.input :notes, input_html: { class: "form-control" }
  .form-group
    = f.input :time_take_per_day, input_html: { class: "form-control" }
  .form-group
    = f.input :amount_given, input_html: { class: "form-control" }
  
