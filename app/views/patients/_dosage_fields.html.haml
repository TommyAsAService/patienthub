= stylesheet_link_tag    'patients', media: 'all', 'data-turbolinks-track' => true
.nested-fields
  .nested-header
    %span Dosage
    = link_to_remove_association f, class: 'btn btn-default btn' do
      .glyphicon.glyphicon-remove
  .form-group
    = f.input :time_taken, input_html: { class: "form-control" }
  .form-group
    = f.input :frequency, input_html: { class: "form-control" }
  .form-group
    = f.input :start_date, input_html: { class: "form-control" }
  .form-group
    = f.input :treatment_name, :url => autocomplete_treatment_name_patients_path, :as => :autocomplete, input_html: { class: "form-control" }
