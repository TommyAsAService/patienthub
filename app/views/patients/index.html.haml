%h1 Listing Patient
%table#datatable.table.table-striped.table-bordered{:border => "1", :style => "width:100%"}
  %thead
    %tr
      %th Name
      %th Age
      %th Address
      %th Contact Number
      %th Patient Number
      %th
      %th
      %th
      %th
  %tfoot
    %tr
      %th Name
      %th Age
      %th Address
      %th Contact Number
      %th Patient Number
      %th
      %th
      %th
      %th
  %tbody
    - @patients.each do |patient|
      %tr
        %td= patient.name
        %td= patient.age
        %td= patient.address
        %td= patient.contact_number
        %td= patient.patient_number
        %td= link_to 'Add Treatment', {:controller => "dosages", :action => "new", :patient => patient.id }, class: "btn btn-sm btn-primary"
        %td= link_to 'Show', patient, class: "btn btn-sm btn-primary"
        %td= link_to 'Edit', edit_patient_path(patient), class: "btn btn-sm btn-default"       
        %td= link_to ' ', patient_qr_download_path(patient), class: "btn btn-sm btn-default glyphicon glyphicon-qrcode"
%br
  = link_to 'New Patient', new_patient_path, class: "btn btn btn-primary"
  %br

= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-track' => true
= javascript_include_tag 'datatables.config', 'data-turbolinks-track' => true