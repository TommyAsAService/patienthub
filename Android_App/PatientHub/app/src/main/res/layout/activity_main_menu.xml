<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FC9"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/main_menu_header"
            android:textColor="#000"
            android:textSize="20sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/exercise_manu_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50px">

        <LinearLayout
            android:layout_marginBottom="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/customborder">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@drawable/exercise"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:text="@string/exercise_title"
                    style="@style/MainMenuItem"/>

                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:id="@+id/exercise_snippet"/>

            </LinearLayout>

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/black_arrow_right"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/morning_med_item"
            android:background="@drawable/customborder">

            <ImageView
                android:layout_width="200px"
                android:layout_height="200px"
                android:src="@drawable/medication"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/morning_medication_title"
                    style="@style/MainMenuItem"/>

                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:id="@+id/morning_med_snippet"
                    style="@style/MainMenuSubItem"/>

            </LinearLayout>

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/black_arrow_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afternoon_med_item"
            android:orientation="horizontal"
            android:background="@drawable/customborder">

            <ImageView
                android:layout_width="200px"
                android:layout_height="200px"
                android:src="@drawable/medication"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:text="@string/afternoon_medication_title"
                    style="@style/MainMenuItem"/>

                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:id="@+id/afternoon_med_snippet"
                    style="@style/MainMenuSubItem"/>



            </LinearLayout>

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/black_arrow_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/evening_med_item"
            android:background="@drawable/customborder">

            <ImageView
                android:layout_width="200px"
                android:layout_height="200px"
                android:src="@drawable/medication"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:text="@string/evening_medication_title"
                    style="@style/MainMenuItem"/>

                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:id="@+id/evening_med_snippet"
                    style="@style/MainMenuSubItem"/>

            </LinearLayout>

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/black_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/quizItem"
            android:background="@drawable/customborder">

            <ImageView
                android:layout_width="200px"
                android:layout_height="200px"
                android:src="@drawable/quiz"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_title"
                    style="@style/MainMenuItem"/>
                <TextView
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiz_snippet"
                    android:text="@string/quiz_snippet"
                    style="@style/MainMenuSubItem"/>

            </LinearLayout>
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/black_arrow_right"/>

        </LinearLayout>



    </LinearLayout>

    </ScrollView>

</LinearLayout>